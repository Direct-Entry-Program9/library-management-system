<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="312.0" prefWidth="313.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddBookFormController">
   <children>
      <VBox layoutX="14.0" layoutY="14.0" spacing="10.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0">
         <children>
            <VBox prefHeight="49.0" prefWidth="277.0" spacing="5.0">
               <children>
                  <Label text="ISBN : " />
                  <TextField fx:id="txtISBN" promptText="Number" />
               </children>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <Label text="Book Name : " />
                  <TextField fx:id="txtBookName" promptText="EX : Aba Yaluwo" />
               </children>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <Label text="Author : " />
                  <TextField fx:id="txtAuthor" promptText="EX : T B Ilangarathne" />
               </children>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <Label text="Quantity : " />
                  <TextField fx:id="txtQuantity" promptText="Numbers" />
               </children>
            </VBox>
         </children>
      </VBox>
      <Button fx:id="btnAdd" defaultButton="true" layoutX="124.0" layoutY="254.0" mnemonicParsing="false" onAction="#btnAddOnAction" prefHeight="34.0" prefWidth="66.0" text="Add">
         <font>
            <Font name="DejaVu Sans Mono Bold" size="13.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
